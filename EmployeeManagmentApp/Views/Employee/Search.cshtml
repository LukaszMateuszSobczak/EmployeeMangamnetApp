@{
    ViewData["Title"] = "Wyszukiwanie";
}

@model List<Employee>

<div class="container">
    <div class="card mb-4">
        <div class="row">
            <div class="col offset-md2">
                <div class="card-header bg-primary text-white">
                    <h3>Wyszukaj pracownika</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Search" method="get">
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group mb-3">
                                    <input class="form-control" type="text" name="firstName" placeholder="Imię pracownika" />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group mb-3">
                                    <input class="form-control" type="text" name="lastName" placeholder="Nazwisko pracownika" />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group mb-3">
                                    <input class="form-control" type="text" name="pesel" placeholder="Pesel pracownika" />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group mb-3">
                                    <input class="form-control" type="text" name="city" placeholder="Miasto" />
                                </div>
                            </div>
                            <div class="d-flex justify-content-between my-3">
                                <a asp-action="Index" asp-controller="Employee" class="btn btn-danger">Anuluj</a>
                                <button type="submit" class="btn btn-success">Szukaj</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



    @if (Model.Count == 0)
    {
        <p>Brak danych</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="table-dark">
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Pesel</th>
                        <th>Miasto</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr class="table-light">
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.Pesel</td>
                            <td>@employee.Address.City</td>
                            <td>
                                <a class="btn btn-outline-primary btn-sm text-uppercase fw-bold" asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">Szczegóły</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>



