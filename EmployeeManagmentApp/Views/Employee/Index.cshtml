@{
    ViewData["Title"] = "Pracownicy";
}

@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show position-absolute bottom-0 end-0 me-4 mb-4" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@model List<Employee>


<div class="conatiner mb-3">
    <div class="row">
        <div class="col-6">
            <h2>Pracownicy</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-success">Dodaj pracownika</a>
        </div>
        
    </div>
    
</div>


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Pesel</th>
                <th>Miasto</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr class="table-light">
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Pesel</td>
                    <td>@employee.Address.City</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm text-uppercase fw-bold" asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">Szczegóły</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


